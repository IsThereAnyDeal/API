{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bundle",
  "type": "object",
  "required": ["id", "title", "page", "url", "isMature", "publish", "expiry", "counts", "tiers"],
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "page": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "details": {
      "type": "string",
      "format": "uri"
    },
    "isMature": {
      "type": "boolean"
    },
    "publish": {
      "type": "string",
      "format": "date-time"
    },
    "expiry": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "counts": {
      "type": "object",
      "required": ["games", "media"],
      "properties": {
        "games": {
          "type": "integer",
          "minimum": 0
        },
        "media": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "tiers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["price", "games"],
        "properties": {
          "price": {
            "oneOf": [
              {"$ref": "obj.price.json"},
              {"type": "null"}
            ]
          },
          "games": {
            "type": "array",
            "items": {
              "$ref": "obj.game.json"
            }
          }
        }
      }
    }
  }
}
